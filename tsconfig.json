{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmitOnError": false,
    "removeComments": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [
      "esnext",
      "es6"
    ],
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "express"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "index.d.ts",
    "src/**/*.spec.ts"
  ]
}
